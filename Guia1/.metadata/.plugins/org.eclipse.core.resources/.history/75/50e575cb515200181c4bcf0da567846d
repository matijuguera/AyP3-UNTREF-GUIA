#include <stdio.h>

int main(int argc, char** argv) {
	int enteros[] = { 1, 2, 3, 4, 7, 78, 174 };
	int simple = 32;
	int radio = 4;
	int* p;
	int* q;
	int* r;

	p = enteros + 6;
	q = &simple;
	r = q;

	printf("posicion r:%p posicion q:%p valor r:%d valor q:%d",r,*r);

	*r = 115;

	r = &radio;

	*p = radio;

	p = r;
	q = enteros;

	*(q + 4) = 0;
	*p = 0;

	r = q + 1;

	q - r;

	p = enteros + 3;

	q - p;
	return 0;

}

//2) El valor de p = la posicion de memoria donde se encuentra 174 (entero[6]), q es la posicion de memoria de simple, r
